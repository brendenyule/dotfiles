! urxvt

URxvt.borderless: true
!URxvt.internalBorder: 3
!URxvt.externalBorder: 3
URxvt.scrollBar: false

URxvt.font: xft:UbuntuMono:pixelsize=20:antialias=true
URxvt.boldFont: xft:UbuntuMono:pixelsize=20:antialias=true

! clickable urls
URxvt.url-launcher: google-chrome
URxvt.matcher.button: 1

! tabs
URxvt.tabbed.tabbar-bg: -1
URxvt.tabbed.tabbar-fg: -2
URxvt.tabbed.tab-bg: -2
URxvt.tabbed.tab-fg: -1
URxvt.tabbed.title-bg: -1
URxvt.tabbed.title-fg: -2
URxvt.tabbed.autohide: true
URxvt.tabbed.new-button: false
URxvt.tabbed.title: true


! colours
!#include "/home/doctorly/.colors/gaseg"
!#include "/home/doctorly/.colors/rb15"
!#include "/home/doctorly/.colors/jsch"
!#include "/home/doctorly/.colors/s3r0"
#include "/home/doctorly/.colors/hund"
!#include "/home/doctorly/.colors/coral"

! fade when out of focus
URxvt.fadeColor: #000000
URxvt.shading: 10
URxvt.fading: 40
URxvt.transparent: true

! fonts
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! copy paste
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

